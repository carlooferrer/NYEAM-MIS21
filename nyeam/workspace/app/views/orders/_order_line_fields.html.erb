<div class = "row">
    <div class="nested-fields">
        <div class = "col-md-5">
            <%= f.collection_select :product_id, Product.where(status: true), :id, :name, :input_html => { :maxlength =>3, :style => 'height: 20px;display:inline-block'} %> 
        </div>
        <div class = "col-md-5">
            <%= f.input :quantity, as: :integer, label: 'Quantity:', :input_html => { min: '0',:maxlength =>2,:style=> 'width: 30%; display:inline-block'} %>
        </div>
        <div class = "col-md-2">
            <%= link_to_remove_association raw("Remove"), f ,class:"btn btn-danger pull-right"%>
        </div>
    <br>
    </div>
</div>
