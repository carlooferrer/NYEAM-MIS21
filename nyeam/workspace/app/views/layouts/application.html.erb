<!DOCTYPE html>
<html>
  <head>
    <title>NYEAM PH</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/css?family=Droid+Sans+Mono|Fira+Sans+Condensed|Open+Sans|Roboto|Roboto+Mono&amp;subset=greek" rel="stylesheet">
    
    <style type="text/css">
    .navbar{
    background-color: transparent;
    border-top: 1px solid ##FFCC11;
    border-bottom: 1px solid #FFCC11;
    font-family: 'Fira Sans Condensed', sans-serif;
    color: #696969;
    }
    
    .navbar:hover{
      color: yellow;
    }
    
     html, body{

        margin-bottom: 0px;
        position: relative;
        min-height: 100%;
        }
        #foot_text {
          color: #FFFFFF;
          font-family: 'Roboto';
        }
    .footer {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 50px;
  background-color: #183C6C;
}
  
    
    </style>
  </head>

  <body><nav class="navbar navbar-inverse" role="navigation">
      <div class="container">
        <div class="navbar-header">
          
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/">NYEAM PH</a>
        </div>
        <div class="collapse navbar-collapse">
        	<ul class="nav navbar-nav">
        		<li>
        			<% if admin_signed_in? %>
        			<%= link_to "Cars", products_path %>
        			<% elsif cashier_signed_in? %>
        			<%= link_to "Orders", orders_path %>
        			<% end %>
        		</li>
        		<li>
        		  <% if admin_signed_in? %>
        			<%= link_to "Cashiers", cashiers_path %>
        			<% end %>
        		</li>
        		<li>
        		  <% if admin_signed_in? %>
        			<%= link_to "Reports", reports_products_path %>
        			<% end %>
        		</li>
        	</ul>

          <p class="navbar-text pull-right">
          <% if admin_signed_in? %>
            Logged in as <strong><%= current_admin.email %></strong>.
            <%= link_to 'Edit profile', edit_admin_registration_path, :class => 'navbar-link' %> |
            <%= link_to "Logout", destroy_admin_session_path, method: :delete, :class => 'navbar-link'  %>
            <% elsif cashier_signed_in? %>
            Logged in as <strong><%= current_cashier.email %></strong>.
            <%= link_to 'Edit profile', edit_cashier_registration_path, :class => 'navbar-link' %> |
            <%= link_to "Logout", destroy_cashier_session_path, method: :delete, :class => 'navbar-link'  %>
          <% else %>
            <%= link_to "Sign up", new_admin_registration_path, :class => 'navbar-link'  %> |
            <%= link_to "Login", new_login_path, :class => 'navbar-link'  %>
          <% end %>
          </p>
        </div>
      </div>
    </nav> 
    
    <div class="container">
      <% if notice %>
        <p class="alert alert-success"><%= notice %></p>
      <% end %>
      <% if alert %>
        <p class="alert alert-danger"><%= alert %></p>
      <% end %>
      <%= yield %>
    </div>
    <br>
    <br>
    <br>
    <br>
    <br>
    <br><br>
    <br>
    <br>
    <br>
    <br>
    <br><br>
    <br>
    
    <footer class="footer">
      <div class="container">
        <p id ="foot_text" class="text-muted">Est. 2017</p>
      </div>
    </footer>
  </body>
</html>
