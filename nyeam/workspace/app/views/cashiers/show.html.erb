<div class="col-md-offset-3 col-md-6">
    <div class="row">


        <h3>Show Cashier</h3>

        <% if current_admin == @cashier.admin %>
            <%= link_to 'Update', edit_cashier_path, class:"btn btn-success" %>
        <% end %>
        <%= link_to 'Back to Index', cashiers_path, class:"btn btn-danger" %>
        
        <br>
        <br>
        
        <table class="table table-bordered">
            <tbody>
                <tr>
                    <td> <strong> Name: </strong> </td>
                    <td> <%= @cashier.name %> </td>
                </tr>
                <tr>
                    <td> <strong> Admin </strong> </td>
                    <td> <%= @cashier.admin %> </td>
                </tr>
                <tr>
                    <td> <strong> Status </strong> </td>
                    <% if @cashier.status == true %>
                    <td> <%= 'Active' %> </td>
                        <% else %>
                        <td> <%= 'Inactive' %> </td>
                    <% end %>
                </tr>
            </tbody>
        </table>
    </div>
</div>