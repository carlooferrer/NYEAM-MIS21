
<table class="table table-bordered">
    <thead>
        <tr>
            <th> Name </th>
            <th> Price </th>
            <th> Status </th>
            <th colspan="3" class="text-center"> Actions </th>
        </tr>
    </thead>
    <tbody>
        <% @products.each do |product| %>
            <tr>
                <% if product.status == true %>
                <td> <%= product.name %> </td>
                <td> <%= product.price %> </td>
                <td> <%= 'Active' %> </td>
                <% if current_admin == product.admin %>
                    <td class="text-center"> <%= link_to 'Show', product, class:"btn btn-primary" %> </td>
                    <td class="text-center"> <%= link_to 'Update', edit_product_path(product), class:"btn btn-success" %> </td>
                    <td class="text-center"> <%= link_to 'Deactivate', product, method: :delete, class:"btn btn-danger", data: { confirm: 'Are you sure you want to deactivate this product?' }  %> </td>
                <% else %>
                    <td class="text-center" colspan="3"> <%= link_to 'Show', product, class:"btn btn-primary" %> </td>
                <% end %>
                <% end %>
            </tr>
        <% end %>
        
    </tbody> 
</table>

<%= link_to raw("<i class='glyphicon glyphicon-plus'></i> Add New Car"), new_product_path, class:"btn btn-primary" %>