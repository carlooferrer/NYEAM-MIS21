<div class="col-md-offset-3 col-md-6">
    <h3>Show Car</h3>

    <% if current_admin == @product.admin %>
        <%= link_to 'Update', edit_product_path, class:"btn btn-success" %>
    <% end %>
    <%= link_to 'Back to Index', products_path, class:"btn btn-danger" %>
    
    <br>
    <br>
    
    <table class="table table-bordered">
        <tbody>
            <tr>
                <td> <strong> Name: </strong> </td>
                <td> <%= @product.name %> </td>
            </tr>
            <tr>
                <td> <strong> Price </strong> </td>
                <td> <%= @product.price %> </td>
            </tr>
            <tr>
                <td> <strong> Status </strong> </td>
                <% if @product.status == true %>
                <td> <%= 'Active' %> </td>
                    <% else %>
                    <td> <%= 'Inactive' %> </td>
                <% end %>
            </tr>
        </tbody>
    </table>
</div>